page{
  width:100%;
  height:100%;
}
.block{
  height: 100rpx;
}

.rollblock{
  height: -50rpx;
}
.temp{
  align-items: center;
  justify-content:center;
  font-size: 60rpx;
  line-height:1.4;
  opacity: 0.8;
  color:white;
  display:flex;
}
.timeblock{
  align-items: center;
  justify-content:center;
  color:white;
  display:flex;
  font-size: 100rpx;
  opacity: 0.8;
}

.block{
  padding-top: 400rpx;
  padding-bottom: 250rpx;
}
.roll{
  position: relative;
  top: -95%;
  left: -2%;
  bottom: 0%;
  height: 480rpx
}
.weather-bg{
   position: fixed;
   top:0;
   left:0;
   bottom: 0;
   right: 0;
   display: flex;
   width:100vw;
   height:100vh;
   justify-content: center;
   align-items: center;
   z-index:-1;
}
